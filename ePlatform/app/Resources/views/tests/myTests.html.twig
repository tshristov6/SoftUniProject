<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Tests{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('profile/assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('profile/assets/css/datepicker3.css') }}" rel="stylesheet">
        <link href="{{ asset('profile/assets/css/styles.css') }}" rel="stylesheet">

        <!--Icons-->
        <script src="{{ asset('profile/assets/js/lumino.glyphs.js') }}"></script>
    {% endblock %}

</head>

<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('user_profile') }}"><span>Profile</span>Page</a>
            <ul class="user-menu">
                <li class="dropdown pull-right">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><svg class="glyph stroked male-user"><use xlink:href="#stroked-male-user"></use></svg><span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="{{ path('security_logout') }}"><svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg> Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>

    </div>
</nav>

<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
    <form role="search">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
        </div>
    </form>
    <ul class="nav menu">
        <li><a href="{{ path('user_profile') }}"><svg class="glyph stroked dashboard-dial"><use xlink:href="#stroked-dashboard-dial"></use></svg> Профил</a></li>
        <li ><a href="{{ path('tests') }}"><svg class="glyph stroked pencil"><use xlink:href="#stroked-pencil"></use></svg> Тестове</a></li>
        <li class="active"><a href="{{ path('myTests') }}" ><svg class="glyph stroked app-window"><use xlink:href="#stroked-app-window"></use></svg> Моите тестове</a></li>
        <li><a href="{{ path('test_create') }}" ><svg class="glyph stroked app-window"><use xlink:href="#stroked-app-window"></use></svg> Създай тест</a></li>
        <li><a href="{{ path('blog_index') }}"><svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"></use></svg> Към сайта</a></li>
    </ul>
</div><!--/.sidebar-->

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
            <li class="active">Тестове</li>
            <div class="form-group">
            </div>
        </ol>
    </div>
    <br>
    <center><h2>Моите тестове</h2></center>
    <div class="container body-content">
        <div class="row">
            {% for test in tests %}
                <div class="col-md-7">
                    <article>
                        <header>
                            <h2>Title: {{ test.title }}</h2>
                        </header>

                        <p>
                            Content: {{ test.content }}
                        </p>

                        <img src="{{ asset('uploads/images/' ~ test.image) }}" width="50%" height="50%" >

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-danger btn-xs" href="{{ path('tests_delete', {'id':test.id}) }}">delete &raquo;</a>
                                <a class="btn btn-success btn-xs" href="{{ path('tests_edit', {'id':test.id}) }}">edit &raquo;</a>
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('tests') }}">back &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>


            {% endfor %}
        </div>
    </div>
    <br>

</div>


{% block javascripts %}
    <script src="{{ asset('profile/assets/js/jquery-1.11.1.min.js') }}"></script>
    <script src="{{ asset('profile/assets/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('profile/assets/js/chart.min.js') }}"></script>
    <script src="{{ asset('profile/assets/js/chart-data.js') }}"></script>
    <script src="{{ asset('profile/assets/js/easypiechart.js') }}"></script>
    <script src="{{ asset('profile/assets/js/easypiechart-data.js') }}"></script>
    <script src="{{ asset('profile/assets/js/bootstrap-datepicker.js') }}"></script>
{% endblock %}
</body>

</html>