<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Register{% endblock %}</title>
    {% block stylesheets %}
    <link href='{{ asset('http://fonts.googleapis.com/css?family=Pacifico') }}' rel='stylesheet' type='text/css'>

    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/login.css') }}" rel="stylesheet">

    <script src="{{ asset('https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js') }}"></script>
    <script src="{{ asset('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') }}"></script>


    <script src="{{ asset('assets/js/jquery.min.js') }}"></script>

    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    {% endblock %}
</head>

<body>
<div class="container">
    <div class="login-form">

        <h1 class="text-center">Register</h1>
        <div class="form-header">
            <i class="fa fa-user"></i>
        </div>
        <form method="post" class="form-register" role="form" id="register-form">
            <div>
                <input name="user[fullName]" id="name" type="text" class="form-control" placeholder="Full Name" required="required">
                <span class="help-block"></span>
            </div>
            <div>
                <input name="user[email]" id="email" type="email" class="form-control" placeholder="Email address" required="required">
                <span class="help-block"></span>
            </div>
            <div>
                <input name="user[password]" id="password" type="password" class="form-control" placeholder="Password" required="required">
                <span class="help-block"></span>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}"/>
            <button class="btn btn-block bt-login" type="submit">Sign Up</button>
        </form>
        <div class="form-footer">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <i class="fa fa-check"></i>
                    <a href="{{ path('security_login') }}"> Sign In </a>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <i class="fa fa-lock"></i>
                    <a href="{{ path('blog_index') }}">Back to site</a>
                </div>
            </div>

        </div>
    </div>
</div>
{% block javascripts %}
<script src="{{ asset('assets/js/jquery.validate.min.js') }}"></script>
<script src="{{ asset('assets/js/register.js') }}"></script>
{% endblock %}
</body>
</html>